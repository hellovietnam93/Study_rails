<% if @user_class.errors.any? %>
  $("#errors-enroll-class").
    html("<%= j render 'shared/errors_messages', object: @user_class %>")
<% else %>
  $(".class_room-<%= @class_room.id %> .registered_student").html("<%= @class_room.registered_student %>")
  <% if current_user.student? %>
    $(".members .tbody").append("<%= j render 'class_rooms/member', member: @user_class %>")
  <% end %>
  $(".tab-list .pull-right").html("<%= j render 'class_rooms/class_actions' %>")
  $("#sign-in-class-modal").modal("hide")
  $(".modal-backdrop").remove()
  $("#assignments").html("<%= j render 'class_rooms/assignment_tab' %>")
<% end %>
set_timetout()
