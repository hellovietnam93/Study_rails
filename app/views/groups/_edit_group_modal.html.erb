<div id="edit-group-modal" class="modal fade" role="dialog"
  data-backdrop="static">
  <div class="modal-dialog">
    <%= form_for @group, class: "col-md-12" do |f| %>
      <div class="modal-content">

        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">
            &times;
          </button>
          <h4 class="modal-title">
            <%= t "groups.actions.edit", name: @group.name %>
          </h4>
        </div>

        <div class="modal-body">
          <div class="row">
            <div id="errors-edit-group"></div>

            <%= render "groups/form", f: f %>
          </div>
        </div>

        <div class="modal-footer">
          <%= f.submit t("form.buttons.save"),
            data: {disable_with: t("form.buttons.saving")},
            class: "btn btn-primary" %>
          <%= link_to t("form.buttons.cancel"), "javascript:void(0)",
            data: {dismiss: "modal"} %>
        </div>
      </div>
    <% end %>
  </div>
</div>
