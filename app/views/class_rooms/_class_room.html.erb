<div class="element-item class_room-<%= class_room.id %>"
  data-status="<%= class_room.status %>"
  data-type="<%= class_room.class_type %>">
  <% if class_room.open? %>
    <div class="box box-info box-solid">
  <% elsif class_room.in_progress? %>
    <div class="box box-success box-solid">
  <% else %>
    <div class="box box-default box-solid">
  <% end %>
    <div class="box-header">
      <h3 class="box-title uid">
        <%= link_to class_room.uid, class_room %>
      </h3>

      <div class="box-tools pull-right type">
        <%= t "class_rooms.class_types.#{class_room.class_type}" %>
      </div>
    </div>

    <div class="box-body">
      <%= link_to image_tag("class.png"), class_room %>
    </div>

    <% if class_room.open? %>
      <div class="box-footer bg-aqua-active color-palette">
    <% elsif class_room.in_progress? %>
      <div class="box-footer bg-green-active color-palette">
    <% else %>
      <div class="box-footer bg-gray-active color-palette">
    <% end %>
      <div class="status pull-right">
        <%= t "class_rooms.statuses.#{class_room.status}" %></div>
      <div class="name"><%= class_room.name.truncate 25 %></div>
    </div>

  </div>
</div>
