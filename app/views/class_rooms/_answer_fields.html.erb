<div class="row answer-form">
  <p class="col-md-5">
    <%= f.label :content %>
    <%= f.text_field :content, class: "form-control" %>
  </p>
  <p class="col-md-3">
    <%= f.label :correct %>
    <%= f.check_box :correct, class: "checkbox" %>
  </p>
  <p class="col-md-2">
    <%= f.hidden_field :_destroy %>
  </p>
  <a class="btn btn-danger button-remove">
    <%= t "word.remove" %>
  </a>
</div>
