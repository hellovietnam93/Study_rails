<% if @comment.post.present? %>
  $("#comment-new-<%= @comment.post_id %>").
    append("<%= j render @comment %>")
  $("#post-<%= @comment.post_id %>").find("form")[0].reset()
<% else %>
  $("#comment-children-<%= @parent.id %>").
    append("<%= j render @comment %>")
  $("#comment-<%= @parent.id %>").find("form")[0].reset()
<% end %>
