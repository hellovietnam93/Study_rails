<% if @comment.post.present? %>
  $("#comment-new-<%= @comment.post_id %>").
    append("<%= j render @comment %>")
  $.each($("#post-<%= @comment.post_id %>").find("form"), function(key, value){
    value.reset()
  })
<% else %>
  $("#comment-children-<%= @parent.id %>").
    append("<%= j render @comment %>")
  $.each($("#comment-<%= @parent.id %>").find("form"), function(key, value){
    value.reset()
  })
<% end %>
