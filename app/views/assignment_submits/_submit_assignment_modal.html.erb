<div id="submit-assignment-modal" class="modal fade" role="dialog"
  data-backdrop="static">
  <div class="modal-dialog modal-lg">
    <%= form_for [@class_room, @assignment_submit], remote: true, class: "col-md-12" do |f| %>
      <div class="modal-content">

        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">
            &times;
          </button>
          <h4 class="modal-title">
            <%= t "class_rooms.assignments.actions.submit" %>
          </h4>
        </div>

        <div class="modal-body">
          <div class="row">
            <div id="errors-create-assignment-submit"></div>
            <%= f.hidden_field :class_room_id, value: @class_room.id %>
            <%= f.hidden_field :user_id, value: current_user.id %>
            <%= f.hidden_field :assignment_id %>

            <div class="form-group">
              <div class="col-md-12">
                <%= f.label t("assignment_submits.fields.content") %>
                <%= f.cktext_area :content, class: "form-control" %>
              </div>
            </div>
          </div>
        </div>

        <div class="modal-footer">
          <%= f.submit t("form.buttons.save"),
            data: {disable_with: t("form.buttons.saving")},
            class: "btn btn-primary" %>
          <%= link_to t("form.buttons.cancel"), "javascript:void(0)",
            data: {dismiss: "modal"} %>
        </div>
      </div>
    <% end %>
  </div>
</div>
