<div id="statistics">
  <div class="box">
    <div class="box-header with-border">
      <% if current_user.lecturer? %>
        <%= render "class_rooms/class_header" %>
      <% else %>
        <%= render "students/class_rooms/class_header" %>
      <% end %>
    </div>

    <div class="box-body">
      <div id="post-by-day" data-x-axis="<%= @x_axis %>" data-y-axis="<%= @y_axis %>">
      </div>

      <% if current_user.lecturer? %>
        <% @statistic_of_member.each do |member, data| %>
          <div class="col-md-4">
            <div class="box box-danger box-solid">
              <div class="box-header with-border">
                <h3 class="box-title">
                  <strong><%= member.email %></strong>
                </h3>
                <div class="box-tools pull-right">
                  <button type="button" class="btn btn-box-tool" data-widget="collapse">
                    <i class="fa fa-minus"></i>
                  </button>
                  <button type="button" class="btn btn-box-tool" data-widget="remove">
                    <i class="fa fa-times"></i>
                  </button>
                </div>
              </div>

              <div class="box-body">
                <div id="statistic-member-<%= member.id %>"
                  data-statistic-keys="<%= data.keys %>"
                  data-satistic-values="<%= data.values %>"
                  data-member-id="<%= member.id %>">

                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="row">
          <div class="col-md-4">
            <%= render "most_posts_box" %>
          </div>

          <div class="col-md-4">
            <%= render "most_comments_box" %>
          </div>

          <div class="col-md-4">
            <%= render "most_tags_box" %>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6">
            <%= render "lecturer_answers_box" %>
          </div>
          <div class="col-md-6">
            <%= render "high_vote_posts" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
