<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title yield(:title) %></title>
    <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
    <%= stylesheet_link_tag "dist/AdminLTE.min.css" %>
    <%= stylesheet_link_tag "dist/skins/_all-skins.min.css" %>
    <%= stylesheet_link_tag "fullcalendar.min.css" %>
    <%= stylesheet_link_tag "fullcalendar.print.css", media: "print" %>

    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "dist/app.min.js" %>
    <%= javascript_include_tag Ckeditor.cdn_url %>
    <%= csrf_meta_tags %>
    <script type="text/javascript">
      I18n.defaultLocale = "<%= I18n.default_locale %>";
      I18n.locale = "<%= I18n.locale %>";
    </script>
  </head>
  <body class="hold-transition skin-blue sidebar-mini">
    <%= render "shared/header" %>
    <%= render "shared/main_sidebar" if user_signed_in? %>
    <div id="wrapper" class="content-wrapper">
      <div class="container-fluid">
        <%= render "shared/flash" %>
      </div>
      <%= yield %>
    </div>
  </body>
</html>
