<div id="sign_in">
  <h2 class="text-center"><%= t "users.title.sign_in" %></h2>
  <%= form_for resource, as: resource_name, url: session_path(resource_name) do |f| %>
    <%= render "shared/errors_messages", object: resource %>
    <div class="form-group">
      <div class="col-xs-12">
        <div class="input-group">
          <span class="input-group-addon">
            <i class="glyphicon glyphicon-envelope"></i>
          </span>
          <%= f.email_field :email, class: "form-control",
            placeholder: t("users.fields.email") %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="col-xs-12">
        <div class="input-group">
          <span class="input-group-addon">
            <i class="glyphicon glyphicon-lock"></i>
          </span>
          <%= f.password_field :password, autocomplete: "off", class: "form-control",
            placeholder: t("users.fields.password") %>
        </div>
      </div>
    </div>
    <div class="form-group formSubmit">
      <div class="col-sm-7">
        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>
      </div>
      <div class="col-sm-5 submitWrap pull-right">
        <%= f.submit t("users.title.sign_in"), class: "btn btn-primary" %>
      </div>
    </div>
    <div class="form-group formNotice">
      <div class="col-xs-12">
        <p class="text-center">
          <span><%= render "devise/shared/links" %></span>
        </p>
      </div>
    </div>
  <% end %>
</div>
