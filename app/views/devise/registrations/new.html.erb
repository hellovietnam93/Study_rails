<body class="hold-transition register-page">
  <div class="register-box">
    <div class="register-logo">
      <b><%= t "static_page.welcome" %></b><br>
      <span style="font-size: 26px">
        <%= link_to t("static_page.app_name"), root_path %>
      </span>
    </div>

    <div class="register-box-body">
      <p class="login-box-msg"><%= t "static_page.registrations" %></p>
      <%= form_for resource, as: resource_name, url: registration_path(resource_name),
        html: {class: "row-fluid"} do |f| %>
        <%= render "shared/errors_messages", object: resource %>
        <div class="form-group has-feedback">
          <%= f.email_field :email, class: "form-control",
            placeholder: t("users.fields.email") %>
          <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
        </div>
        <div class="form-group has-feedback">
          <%= f.password_field :password, autocomplete: "off", class: "form-control",
            placeholder: t("users.fields.password") %>
          <span class="glyphicon glyphicon-lock form-control-feedback"></span>
        </div>
        <div class="form-group has-feedback">
          <%= f.password_field :password_confirmation, autocomplete: "off",
            class: "form-control", placeholder: t("users.fields.password_confirmation") %>
          <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
        </div>
        <div class="row">
          <div class="col-xs-offset-8 col-xs-4">
            <%= f.submit t("users.title.sign_up"), class: "btn btn-primary btn-block btn-flat" %>
          </div>
        </div>

        <div class="form-group formNotice">
          <p class="text-center">
            <span><%= render "devise/shared/links" %></span>
          </p>
        </div>
      <% end %>
    </div>
  </div>
</body>
