<div class="box box-primary">
  <div class="box-header with-border">
    <h3 class="box-title"><%= t "users.title.about" %></h3>
  </div>

  <div class="box-body">
    <strong>
      <i class="fa fa-university margin-r-5"></i>
      <%= t "users.fields.school" %>
    </strong>

    <p class="text-muted">
      <%= @user.profile.school %>
    </p>

    <hr>

    <strong>
      <i class="fa fa-graduation-cap margin-r-5"></i>
      <%= t "users.fields.program" %>
    </strong>

    <p class="text-muted">
      <%= @user.profile.program %>
    </p>

    <hr>

    <strong>
      <i class="fa fa-book margin-r-5"></i>
      <%= t "users.fields.class_name" %>
    </strong>

    <p class="text-muted">
      <%= @user.profile.class_name %>
    </p>

    <hr>

    <strong>
      <i class="fa fa-map-marker margin-r-5"></i>
      <%= t "users.title.location" %>
    </strong>

    <p class="text-muted">
      <%= @user.profile.address %>
    </p>

    <hr>

    <strong>
      <i class="fa fa-birthday-cake" aria-hidden="true"></i>
      <%= t "users.title.birthday" %>
    </strong>

    <p class="text-muted">
      <%= @user.profile.birthday.strftime(t "date.formats.default") if @user.
        profile.birthday.present? %>
    </p>

    <hr>
  </div>
</div>
