<%= link_to class_room_assignments_path(@class_room) do %>
  <i class="fa fa-tasks"></i>
  <%= t "assignments.assignment" %>
<% end %> <br>
<%= link_to t("class_rooms.students.tabs.online_tests"), class_room_online_tests_path(@class_room) %> <br>
<%= link_to t("forums.forum"), @class_room.forum %> <br>
<%= link_to t("class_rooms.timetables"),
  class_room_timetables_path(@class_room) %> <br>
<%= link_to t("documents.document"),
  class_room_documents_path(@class_room) %>

<div class="row tab-list">
  <div class="col-md-12">
    <ul class="nav nav-tabs" role="tablist" id="tabs">
      <% Settings.class_room.students.tabs.each do |key, value|  %>
        <li role="presentation">
          <a href="#<%= key %>" aria-controls="home" role="tab" data-toggle="tab">
            <%= t "class_rooms.students.tabs.#{key}" %>
          </a>
        </li>
      <% end %>
    </ul>
    <div class="tab-content">
      <div role="tabpanel" class="tab-pane active" id="class_rooms">
        <%= render "class_rooms/class_room_tab" %>
      </div>
      <div role="tabpanel" class="tab-pane" id="members">
        <%= render "class_rooms/members_tab" %>
      </div>
    </div>
  </div>
</div>
