<div id="courses">
  <div class="box box-danger">

    <div class="box-header with-border">
      <h3 class="box-title"><%= t "coures.all" %></h3>

      <div class="box-tools pull-right">
        <div id="sorts" class="btn-group button-group">
          <button class="button is-checked" data-sort-by="name">
            <%= t "courses.fields.name" %>
          </button>
          <button class="button" data-sort-by="uid">
            <%= t "courses.fields.uid" %>
          </button>
        </div>
      </div>
    </div>

    <div class="box-body no-padding">
      <div class="courses-list clearfix">
        <%= render @courses %>
      </div>
    </div>
  </div>
</div>
