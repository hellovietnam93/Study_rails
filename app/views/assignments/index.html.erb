<div id="assignments">
  <% if @class_room && user_in_class?(current_user, @class_room) %>
    <div class="row">
      <h4>
        <div class="col-md-10">
          <strong><%= t "assignments.assignment" %></strong>
        </div>
        <div class="col-md-2">
          <div id="new-assignment">
            <%= render "assignments/new_assignment" %>
          </div>
        </div>
      </h4>
    </div>
    <table class="assignments table table-hover">
      <thead><%= render "assignments/header" %></thead>
      <tbody class="tbody">
        <%= render @assignments %>
      </tbody>
    </table>
    <div class="show-modal">
      <%= render "assignments/show_assignment_modal" %>
    </div>
    <h2 id="month">
      <%= link_to "<", date: @date.prev_month %>
      <%= @date.strftime "%B %Y" %>
      <%= link_to ">", date: @date.next_month %>
    </h2>
    <%= calendar @date do |date| %>
      <%= date.day %>
    <% end %>
    <%= render "assignment_submits/submit_assignment_modal" if current_user.student? %>
  <% end %>
</div>
