<div id="assignments">
  <div class="box">
    <div class="box-header with-border">
      <% if current_user.lecturer? %>
        <%= render "class_rooms/class_header" %>
      <% else %>
        <%= render "students/class_rooms/class_header" %>
      <% end %>
    </div>

    <div class="box-body">
      <div class="box box-danger">
        <div class="box-header with-border">
          <h3 class="box-title">
            <strong>
              <%= t "assignments.assignment" %>
            </strong>
          </h3>

          <div class="box-tools pull-right">
            <div id="sorts" class="btn-group button-group">
              <button class="button is-checked" data-sort-by="name">
                <%= t "assignments.fields.name" %>
              </button>
              <button class="button" data-sort-by="start_date">
                <%= t "assignments.fields.start_date" %>
              </button>
              <button class="button" data-sort-by="end_date">
                <%= t "assignments.fields.end_date" %>
              </button>
            </div>

            <% if can? :manage, Assignment %>
              <div class="btn-group">
                <button type="button" class="btn btn-box-tool dropdown-toggle" data-toggle="dropdown">
                  <i class="fa fa-wrench"></i>
                </button>
                <ul class="dropdown-menu" role="menu">
                  <li>
                    <%= link_to t("assignments.actions.new"),
                      new_class_room_assignment_path(@class_room) %>
                  </li>
                </ul>
              </div>
            <% end %>
          </div>

          <div class="box-body no-padding">
            <div class="assignments-list clearfix">
              <% @assignments.each do |assignment| %>
                <%= render "assignment_list", assignment: assignment %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
