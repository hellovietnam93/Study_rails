$("#error_explanation").remove()

<% if @course.errors.any? %>
  $("#errors-edit-course").
    html("<%= j render 'shared/errors_messages', object: @course %>");
<% else %>
  $("#edit-course-modal").modal("hide")
  $("form.edit_course")[0].reset()
  $(".course-config").html("<%= j render 'nav_bar' %>")
  $("#class_rooms").append("<%= j render 'edit_course_modal' %>")
  $("#class_rooms").append("<%= j render 'show_course_modal' %>")
  $(".class-in-course").html("<%= @course.uid %>")
  $("[class^='course_id']").html("<%= @course.uid %>")
<% end %>
set_timetout()
