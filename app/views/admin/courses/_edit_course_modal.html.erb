<div id="edit-course-modal" class="modal fade" role="dialog"
  data-backdrop="static">
  <div class="modal-dialog modal-lg">
    <%= form_for [:admin, @course], remote: true, class: "col-md-12" do |f| %>
      <div class="modal-content">

        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">
            &times;
          </button>
          <h4 class="modal-title">
            <%= t "courses.actions.edit" %>
          </h4>
        </div>

        <div class="modal-body">
          <div class="row">
            <div id="errors-edit-course"></div>

            <div class="col-md-12">
              <div class="col-md-3">
                <div class="form-group">
                  <%= f.label t("courses.fields.uid"), class: "control-label" %>
                  <%= f.text_field :uid, class: "form-control",
                    autofocus: true %>
                </div>
              </div>

              <div class="col-md-3">
                <div class="form-group">
                  <%= f.label t("courses.fields.name"), class: "control-label" %>
                  <%= f.text_field :name, class: "form-control",
                    required: true, autofocus: true %>
                </div>
              </div>

              <div class="col-md-3">
                <div class="form-group">
                  <%= f.label t("courses.fields.language"), class: "control-label" %>
                  <%= f.text_field :language, class: "form-control",
                    required: true, autofocus: true %>
                </div>
              </div>

              <div class="col-md-3">
                <div class="form-group">
                  <%= f.label t("courses.fields.en_name"), class: "control-label" %>
                  <%= f.text_field :en_name, class: "form-control",
                    required: true, autofocus: true %>
                </div>
              </div>
            </div>

            <div class="col-md-12">
              <div class="col-md-4">
                <div class="form-group">
                  <%= f.label t("courses.fields.theory_duration"), class: "control-label" %>
                  <%= f.number_field :theory_duration, class: "form-control",
                    required: true, autofocus: true, step: 0.5 %>
                </div>
              </div>

              <div class="col-md-4">
                <div class="form-group">
                  <%= f.label t("courses.fields.exercise_duration"), class: "control-label" %>
                  <%= f.number_field :exercise_duration, class: "form-control",
                    required: true, autofocus: true, step: 0.5 %>
                </div>
              </div>

              <div class="col-md-4">
                <div class="form-group">
                  <%= f.label t("courses.fields.practice_duration"), class: "control-label" %>
                  <%= f.number_field :practice_duration, class: "form-control",
                    required: true, autofocus: true, step: 0.5 %>
                </div>
              </div>
            </div>

            <div class="col-md-12">
              <div class="col-md-3">
                <div class="form-group">
                  <%= f.label t("courses.fields.credit"), class: "control-label" %>
                  <%= f.number_field :credit, class: "form-control",
                    required: true, autofocus: true, step: 0.5 %>
                </div>
              </div>

              <div class="col-md-3">
                <div class="form-group">
                  <%= f.label t("courses.fields.credit_fee"), class: "control-label" %>
                  <%= f.number_field :credit_fee, class: "form-control",
                    required: true, autofocus: true, step: 0.5 %>
                </div>
              </div>

              <div class="col-md-3">
                <div class="form-group">
                  <%= f.label t("courses.fields.weight"), class: "control-label" %>
                  <%= f.number_field :weight, class: "form-control",
                    required: true, autofocus: true, step: 0.5 %>
                </div>
              </div>

              <div class="col-md-3">
                <div class="form-group">
                  <%= f.label t("courses.fields.abbr_name"), class: "control-label" %>
                  <%= f.text_field :abbr_name, class: "form-control",
                    required: true, autofocus: true %>
                </div>
              </div>
            </div>

            <div class="col-md-12">
              <div class="col-md-6">
                <div class="form-group">
                  <%= f.label t("courses.fields.description"), class: "control-label" %>
                  <%= f.text_area :description, class: "form-control",
                    required: true, autofocus: true %>
                </div>
              </div>

              <div class="col-md-6">
                <div class="form-group">
                  <%= f.label t("courses.fields.evaluation"), class: "control-label" %>
                  <%= f.text_area :evaluation, class: "form-control",
                    required: true, autofocus: true %>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="modal-footer">
          <%= f.submit t("form.buttons.save"),
            data: {disable_with: t("form.buttons.saving")},
            class: "btn btn-primary" %>
          <%= link_to t("form.buttons.cancel"), "javascript:void(0)",
            data: {dismiss: "modal"} %>
        </div>
      </div>
    <% end %>
  </div>
</div>
