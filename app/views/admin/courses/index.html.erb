<div id="courses">
  <div class="title-course">
    <h3 class="title">
      <%= t "courses.all" %>
      <%= link_to "#", data: {toggle: "modal", target: "#new-course-modal"} do %>
        <i class="glyphicon glyphicon-plus"></i>
      <% end %>
    </h3>
  </div>
  <div class="list-all">
    <div class="devide"></div>
    <table class="courses table table-header">
      <thead>
        <%= render "header" %>
      </thead>
      <tbody class="tbody">
        <%= render @courses %>
      </tbody>
    </table>
  </div>
</div>

<%= render "new_course_modal" %>
