<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("static_page.app_name"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <% if current_user.admin? %>
            <li class="dropdown">
              <a href="" class="dropdown-toggle" data-toggle="dropdown">
                <%= t "static_page.actions" %><b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t("imports.import"), admin_imports_path %></li>
                <li><%= link_to t("semesters.semester"), admin_semesters_path %></li>
                <li><%= link_to t("courses.course"), admin_courses_path %></li>
              </ul>
            </li>
          <% end %>
          <li class="dropdown">
            <a href="" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "users.title.account" %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("users.views.menu.profile"), "#" %></li>
              <li><%= link_to t("users.views.menu.setting"),
                edit_user_registration_path %></li>
              <li class="divider"> </li>
              <li>
                <%= link_to t("users.title.sign_out"), destroy_user_session_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("users.title.sign_in"), new_user_session_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
