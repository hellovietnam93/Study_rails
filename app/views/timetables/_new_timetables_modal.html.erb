<div id="new-timetable-modal" class="modal fade" tabindex="-1" role="dialog"
  data-backdrop="static">
  <div class="modal-dialog">
    <%= form_for [@class_room, @timetable], class: "col-md-12" do |f| %>
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">
            &times;
          </button>
          <h4 class="modal-title">
            <%= t "timetables.actions.new" %>
          </h4>
        </div>

        <div class="modal-body">
          <div class="row">
            <div id="errors-create-timetable"></div>
            <%= f.hidden_field :class_room_id, value: @class_room.id %>

            <div class="form-group">
              <div class="col-md-12">
                <%= f.label :title %>
                <%= f.text_field :title, class: "form-control" %>
              </div>
            </div>

            <div class="form-group">
              <div class="form-group col-md-6">
                <%= f.label :start_time %>
                <%= f.text_field :start_time, class: "form-control" %>
              </div>

              <div class="form-group col-md-6">
                <%= f.label :end_time %>
                <%= f.text_field :end_time, class: "form-control" %>
              </div>
            </div>

            <div class="form-group">
              <div class="col-md-12">
                <%= f.text_area :content, class: "form-control" %>
              </div>
            </div>
          </div>
        </div>

        <div class="modal-footer">
          <%= f.submit t("form.buttons.save"),
            data: {disable_with: t("form.buttons.saving")},
            class: "btn btn-primary" %>
          <%= link_to t("form.buttons.cancel"), "javascript:void(0)",
            data: {dismiss: "modal"} %>
        </div>
      </div>
    <% end %>
  </div>
</div>
